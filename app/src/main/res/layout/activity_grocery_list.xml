<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroceryListActivity"
    android:orientation = "vertical">
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/welcome_default"
        android:layout_gravity = "center"
        android:textSize = "35sp"
        android:layout_marginTop = "35dp"
        android:id = "@+id/name"/>
    <Button
        android:layout_marginTop = "25dp"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "@string/itemAdd"
        android:layout_marginLeft = "30dp"
        android:textSize = "15sp"
        android:id = "@+id/addItem"
        android:onClick = "launchItem"/>
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = ""
        android:layout_marginLeft = "30dp"
        android:textSize = "30sp"
        android:layout_marginTop = "30dp"
        android:id = "@+id/itemOne"
        />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = ""
        android:layout_marginLeft = "30dp"
        android:textSize = "30sp"
        android:layout_marginTop = "20dp"
        android:id = "@+id/itemTwo"
        />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = ""
        android:layout_marginLeft = "30dp"
        android:textSize = "30sp"
        android:layout_marginTop = "20dp"
        android:id = "@+id/itemThree"
        />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = ""
        android:layout_marginLeft = "30dp"
        android:textSize = "30sp"
        android:layout_marginTop = "20dp"
        android:id = "@+id/itemFour"
        />
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = ""
        android:layout_marginLeft = "30dp"
        android:textSize = "30sp"
        android:layout_marginTop = "20dp"
        android:id = "@+id/itemFive"
        />

</LinearLayout>